<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_hinhanhphim"
        android:layout_width="@dimen/width_img"
        android:layout_height="@dimen/height_img"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"></ImageView>

    <TextView
        android:id="@+id/txt_ten_phim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ten phim"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_20sp"></TextView>

    <TextView
        android:id="@+id/txt_thoi_gian_phim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ten phim"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_20sp"></TextView>


</LinearLayout>